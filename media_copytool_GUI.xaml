<!--
    Description:    This is the GUI for media_copytool.ps1
    Date:           2017-08-23
    By:             flolilo
-->
<Window x:Class="MediaCopytool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="flolilo's Media-Copytool v0.6.6 (Beta)" Height="300" Width="800" ResizeMode="CanMinimize">
    <Grid Background="#FFB3B6B5">
        <TabControl x:Name="tabControl" VerticalAlignment="Top" Margin="0,0,0,0" Height="220" Background="#FFB3B6B5" BorderBrush="#FF878787">
            <TabItem Header="Paths">
                <Grid Background="#FFB3B6B5">
                    <TextBlock x:Name="textBlockInput"
                        Text="Input-path:" TextAlignment="Right"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,23,0,0"
                        Width="70"
                    />
                    <TextBox x:Name="textBoxInput"
                        Text="textBoxInput" VerticalScrollBarVisibility="Disabled" VerticalContentAlignment="Center"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="100,20,0,0"
                        Height="22" Width="500"
                    />
                    <Button x:Name="buttonSearchIn"
                        Content="Select Path..."
                        VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,20,100,0"
                        Height="22" Width="80"
                    />
                    <CheckBox x:Name="checkBoxRememberIn"
                        Content="Remember" ToolTip="Remembers the Input-Path for future executions." VerticalContentAlignment="Center"
                        Foreground="#FFC90000" FontWeight="Bold"
                        VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,21,15,0" Padding="4,-2,0,0" 
                        Height="22" Width="80"
                    />
                    <TextBlock x:Name="textBlockOutput"
                        Text="Output-path:" TextAlignment="Right"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,55,0,0"
                        Width="70"
                    />
                    <TextBox x:Name="textBoxOutput"
                        Text="textBoxOutput" VerticalScrollBarVisibility="Disabled" VerticalContentAlignment="Center"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="100,52,0,0" 
                        Height="22" Width="500"
                    />
                    <Button x:Name="buttonSearchOut"
                        Content="Select Path..."
                        VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,52,100,0"
                        Height="22" Width="80"
                    />
                    <CheckBox x:Name="checkBoxRememberOut"
                        Content="Remember" ToolTip="Remembers the Output-Path for future executions." VerticalContentAlignment="Center"
                        Foreground="#FFC90000" FontWeight="Bold"
                        VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,53,15,0" Padding="4,-2,0,0"
                        Height="22" Width="80"
                    />
                    <CheckBox x:Name="checkBoxMirror"
                        Content=":Mirror" ToolTip="Enable if you want to Mirror the copied files to a second path." FlowDirection="RightToLeft" VerticalContentAlignment="Center" UseLayoutRounding="False"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,85,0,0" Padding="4,-2,0,0" BorderThickness="1"
                        Height="22" Width="70"
                    />
                    <TextBox x:Name="textBoxMirror"
                        Text="textBoxMirror" VerticalScrollBarVisibility="Disabled" VerticalContentAlignment="Center"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="100,84,0,0"
                        Height="22" Width="500"
                    />
                    <Button x:Name="buttonSearchMirror"
                        Content="Select Path..."
                        VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,84,100,0"
                        Height="22" Width="80"
                    />
                    <CheckBox x:Name="checkBoxRememberMirror"
                        Content="Remember" ToolTip="Remembers the additional Output-Path for future executions." VerticalContentAlignment="Center"
                        Foreground="#FFC90000" FontWeight="Bold"
                        VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,85,15,0" Padding="4,-2,0,0"
                        Height="22" Width="80"
                    />
                    <TextBlock x:Name="textBlockReminder"
                        Text="For all options and features, go to the Settings-tab!"
                        Foreground="#FF2C2C2C" FontSize="16" FontWeight="Bold"
                        VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,140,0,0"
                    />
                </Grid>
            </TabItem>
            <TabItem Header="Settings">
                <Grid Background="#FFB3B6B5">
                    <TextBlock Name="textBlockPresetFormats"
                        Text="Formats to copy:"
                        FontWeight="Bold"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,0,0,0"
                    />
                    <CheckBox x:Name="checkBoxCan"
                        Content="Canon" VerticalContentAlignment="Center"
                        FontFamily="Consolas"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,20,0,0"
                        Width="64"
                    />
                    <TextBlock x:Name="textBlockCan"
                        Text="- CR2"
                        FontFamily="Consolas"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="100,20,0,0"
                    />
                    <CheckBox x:Name="checkBoxNik"
                        Content="Nikon" VerticalContentAlignment="Center"
                        FontFamily="Consolas"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,40,0,0"
                        Width="64"
                    />
                    <TextBlock x:Name="textBlockNik"
                        Text="- NEF &amp; NRW"
                        FontFamily="Consolas"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="100,40,0,0"
                    />
                    <CheckBox x:Name="checkBoxSon"
                        Content="Sony" VerticalContentAlignment="Center"
                        FontFamily="Consolas"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,60,0,0"
                        Width="64"
                    />
                    <TextBlock x:Name="textBlockSon"
                        Text="- ARW"
                        FontFamily="Consolas"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="100,60,0,0"
                    />
                    <CheckBox x:Name="checkBoxJpg"
                        Content="JPEG" VerticalContentAlignment="Center"
                        FontFamily="Consolas"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,80,0,0"
                        Width="64"
                    />
                    <TextBlock x:Name="textBlockJpg"
                        Text="- JPG &amp; JPEG"
                        FontFamily="Consolas"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="100,80,0,0"
                    />
                    <CheckBox x:Name="checkBoxMov"
                        Content="Movies" VerticalContentAlignment="Center"
                        FontFamily="Consolas"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,100,0,0"
                        Width="64"
                    />
                    <TextBlock x:Name="textBlockMov"
                        Text="- MOV &amp; MP4"
                        FontFamily="Consolas"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="100,100,0,0"
                    />
                    <CheckBox x:Name="checkBoxAud"
                        Content="Audio" VerticalContentAlignment="Center"
                        FontFamily="Consolas"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,120,0,0"
                        Width="64" 
                    />
                    <TextBlock x:Name="textBlockAud"
                        Text="- WAV &amp; MP3 &amp; M4A"
                        FontFamily="Consolas"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="100,120,0,0"
                    />
                    <CheckBox x:Name="checkBoxCustom"
                        Content="Custom:" ToolTip="Enable to copy customised file-formats." VerticalContentAlignment="Center"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,140,0,0" Padding="4,-2,0,0"
                        Height="22" Width="64"
                    />
                    <TextBox x:Name="textBoxCustom"
                        Text="textBoxCustoms" FontFamily="Consolas" ToolTip="*.ext1,*.ext2,*.ext3" VerticalContentAlignment="Center" VerticalScrollBarVisibility="Disabled" TextWrapping="Wrap"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="100,140,0,0"
                        Height="22" Width="140"
                    />
                    <Rectangle Fill="#FFB3B6B5" Stroke="#FF878787" Panel.ZIndex="-1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="250,0,0,0" Height="200" Width="2"/>

                    <TextBlock x:Name="textBlockOutSubStyle"
                        Text="Subfolder-Style:"
                        FontWeight="Bold"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="270,0,0,0"
                    />
                    <ComboBox x:Name="comboBoxOutSubStyle" SelectedIndex="1"
                        ToolTip="Choose your favorite subfolder-style." VerticalContentAlignment="Center"
                        FontFamily="Consolas"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="270,20,0,0"
                        Height="23" Width="215">
                        <ComboBoxItem Content="No subfolders"/>
                        <ComboBoxItem Content="yyyy-mm-dd - 2017-12-31" FontFamily="Consolas"/>
                        <ComboBoxItem Content="yyyy_mm_dd - 2017_12_31" FontFamily="Consolas"/>
                        <ComboBoxItem Content="yyyy.mm.dd - 2017.12.31" FontFamily="Consolas"/>
                        <ComboBoxItem Content="yyyymmdd   - 20171231" FontFamily="Consolas"/>
                        <ComboBoxItem Content="yy-mm-dd   - 17-12-31" FontFamily="Consolas"/>
                        <ComboBoxItem Content="yy_mm_dd   - 17_12_31" FontFamily="Consolas"/>
                        <ComboBoxItem Content="yy.mm.dd   - 17.12.31" FontFamily="Consolas"/>
                        <ComboBoxItem Content="yymmdd     - 171231" FontFamily="Consolas"/>
                    </ComboBox>
                    <Rectangle Fill="#FFB3B6B5" Stroke="#FF878787" Panel.ZIndex="-1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="250,60,0,0" Height="2" Width="250"/>

                    <TextBlock x:Name="textBlockHistFile"
                        Text="History-file options:"
                        FontWeight="Bold"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="270,65,0,0"
                    />
                    <CheckBox x:Name="checkBoxUseHistFile"
                        Content="Use history-file to prevent duplicates" ToolTip="Default. Fast way to prevent already copied files from being copied again." VerticalContentAlignment="Center"
                        Foreground="#FF00A22C"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="270,85,0,0"
                    />
                    <RadioButton x:Name="radioButtonWriteHistFileYes"
                        Content="Write old &amp; new files to history-file" ToolTip="Default. Adds new values to the old ones." VerticalContentAlignment="Center"
                        GroupName="WriteHistFile"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="270,105,0,0"
                    />
                    <RadioButton x:Name="radioButtonWriteHistFileOverwrite"
                        Content="Delete old files, write new ones" ToolTip="Deletes the old values and only writes the new one to the history-file." VerticalContentAlignment="Center"
                        GroupName="WriteHistFile"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="270,125,0,0"
                    />
                    <RadioButton x:Name="radioButtonWriteHistFileNo"
                        Content="Don't add new files to history-file" ToolTip="Does not touch the history-file." VerticalContentAlignment="Center"
                        GroupName="WriteHistFile"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="270,145,0,0"
                    />
                    <Rectangle Fill="#FFB3B6B5" Stroke="#FF878787" Panel.ZIndex="-1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="500,0,0,0" Height="200" Width="2"/>

                    <TextBlock x:Name="textBlockOptions" Text="Other options:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="520,0,0,0" FontWeight="Bold"/>
                    <CheckBox x:Name="checkBoxInSubSearch"
                        Content="Dive into subfolders in input-path" ToolTip="Default. E.g. not only searching files in E:\DCIM, but also in E:\DCIM\abc" VerticalContentAlignment="Center"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="520,20,0,0"
                        Width="220"
                    />
                    <CheckBox x:Name="checkBoxCheckInHash"
                        Content="Check hashes of all input-files" ToolTip="If unchecked, duplicate-check is done via name, size, date. If checked, hash is added. Enabling duplicate-check in output-path disables this function." VerticalContentAlignment="Center"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="520,40,0,0"
                        Width="220"
                    />
                    <CheckBox x:Name="checkBoxOutputDupli"
                        Content="Check for duplicates in output-path" ToolTip="Searches for duplicates in the output-path (incl. subfolders). Ideal if you have used LR or other import-tools since the last card-formatting." VerticalContentAlignment="Center"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="520,60,0,0"
                        Width="220"
                    />
                    <!-- TODO: <CheckBox x:Name="checkBox7zipMirror"
                        Content="Mirroring files as 7z-archive" ToolTip="Creating an archive with the input-files in it - good as a backup." VerticalContentAlignment="Center"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="520,80,0,0"
                        Width="220"
                    /> -->
                    <!-- TODO: <CheckBox x:Name="checkBoxPreventDupli"
                        Content="Prevent duplicates from in-path" ToolTip="Prevent duplicates from the input-path (e.g. same file in two folders)."
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="520,110,0,0"
                        Width="220"
                    /> -->
                    <CheckBox x:Name="checkBoxRemoveInputDrive"
                        Content="Remove input-drive after copying" ToolTip="Safely removing the input-drive after successful verification (before mirroring). Note: It does not work with all drives - so double-check if your drive was removed!" VerticalContentAlignment="Center"
                        Foreground="#FFFF1717"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="520,100,0,0"
                        Width="220"
                    />
                    <CheckBox x:Name="checkBoxPreventStandby"
                        Content="Prevent computer-standby" ToolTip="Prevents system from hibernating by simulating the keystroke of F13." VerticalContentAlignment="Center"
                        Foreground="#FF0080FF"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="520,120,0,0"
                        Width="220"
                    />
                    <TextBlock x:Name="textBlockThreadCount"
                        Text="Thread Count:"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="520,145,0,0"
                    />
                    <Slider x:Name="sliderThreadCount" ToolTip="Number of threads for operations. High numbers tend to slow everything down; recommended: 2-4." Minimum="1" Maximum="24" TickPlacement="TopLeft" Width="118" Height="26" SmallChange="1" Value="1" IsSnapToTickEnabled="True" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="612,140,0,0"/>
                    <TextBox x:Name="textBoxThreadCount"
                        Text="{Binding ElementName=sliderThreadCount, Path=Value, UpdateSourceTrigger=PropertyChanged}" ToolTip="Number of threads for operations. High numbers tend to slow everything down; recommended: 2-4." TextAlignment="Center" VerticalContentAlignment="Center"
                        VerticalAlignment="Top" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="735,140,0,0"
                        Height="26" Width="30"
                    />
                    <CheckBox x:Name="checkBoxRememberSettings"
                        Content="Remember settings" ToolTip="Remember all parameters (excl. Remember-Checkboxes)" VerticalContentAlignment="Center"
                        Foreground="#FFC90000" FontWeight="Bold"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="520,170,0,0" Padding="4,-2,0,0"
                        Height="20"
                    />
                </Grid>
            </TabItem>
        </TabControl>
        <Button x:Name="buttonStart"
            Content="START"
            FontWeight="Bold"
            VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20"
            Width="100"
        />
        <Button x:Name="buttonClose"
            Content="EXIT"
            VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,40,20"
            Width="100"
        />
        <Button x:Name="buttonAbout"
            Content="About / Help"
            VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="40,0,0,20"
            Width="100"
        />
    </Grid>
</Window>
